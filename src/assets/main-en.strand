::main
<<do
	this.sfx('voiceDefault');
	this.talkednpc = 0;
	this.supply = 0;

	this.texttimeouts.forEach((t) => clearTimeout(t));
	this.texttimeouts.length = 0;

	if (this.scene.areas.main) {
		this.scene.areas.main.forEach(i => {
			this.destroy(i);
		});
		if (this.scene.area === 'main') {
			this.scene.goto({ area: 'empty' });
		}
	}
	const objects = [
		this.PropParallax({ texture: 'bg_parallax', offset: -1000000, mult: 1 }),
		this.Interrupt({ passage: 'out-of-bounds', width: 2000, y: 1000 }),
		this.Interrupt({ passage: 'out-of-bounds', width: 2000, y: -1000 }),
		this.Interrupt({ passage: 'out-of-bounds', height: 2000, x: 1000 }),
		this.Interrupt({ passage: 'out-of-bounds', height: 2000, x: -1000 }),
	];
	if (this.npc) {
		objects.push(
			this.Npc({ body: 'npc', passage: 'npc', x: 50, y: 50, roam: 50 }),
		);
	}
	if (this.moremonsters) {
		objects.push(
			...new Array(30).fill(0).flatMap((_, idx, arr) => this.Item({ texture: 'supply', x: Math.sin((idx+1)/arr.length*Math.PI*2)*120, y: Math.cos((idx+1)/arr.length*Math.PI*2)*120, passage: 'supply' })),
		);
	} else {
		objects.push(
			...this.Item({ texture: 'supply', x: 120, y: 30, passage: 'supply' }),
			...this.Item({ texture: 'supply', x: 120+30, y: 30+50, passage: 'supply' }),
			...this.Item({ texture: 'supply', x: 120+80, y: 30-10, passage: 'supply' }),
			...this.Item({ texture: 'supply', x: 120+120, y: 30+70, passage: 'supply' }),
		);
	}
	if (this.wolfy) {
		objects.push(
			this.Npc({ body: 'wolfy', passage: 'wolfy', x: -25, y: 50, roam: 50 }),
		);
	}
	this.Area('main', objects);
	if (this.skipped) {
		this.scene.goto({ area: 'main' });
	} else {
		this.scene.goto({ area: 'intro' });
	}
	this.scrim(0, 3000);
	this.goto('close');
